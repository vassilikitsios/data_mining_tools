# CLASSIFICATION:
#
# build classification model for countries in OECD
perform_classification = true
#perform_classification = false
#
# for regularisation
number_of_regularisation_levels_classification = 10
min_log_of_regularisation_level_classification = -5
max_log_of_regularisation_level_classification = 1
#
# for learning curves
number_of_proportions_of_samples_classification = 10
min_proportion_of_samples_classification = 0.2
#

# REGRESSION:
#
# build regression model for average life expectancy of a country
perform_regression = true
#perform_regression = false
#
# for regularisation
number_of_regularisation_levels_regression = 10
min_log_of_regularisation_level_regression = -5
max_log_of_regularisation_level_regression = 1
#
# for learning curves
number_of_proportions_of_samples_regression = 10
min_proportion_of_samples_regression = 0.2
#
#-------------------------------------------------------
# VISUALISATION:
#
# visualise the raw data as correlation and pair plots
perform_visualisation = true
#perform_visualisation = false
